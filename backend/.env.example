# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pollen_dev

# Redis Configuration (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production-use-long-random-string

# Server Configuration
PORT=4000
NODE_ENV=development

# File Upload Limits
MAX_FILE_SIZE_MB=50
TEMP_FILE_CLEANUP_INTERVAL_MS=300000  # 5 minutes in milliseconds

# Storage Quota (Free Plan Limits)
DEFAULT_STORAGE_LIMIT_MB=1024  # 1GB in MB
DEFAULT_TABLE_LIMIT=20
QUOTA_RECALC_INTERVAL_MS=300000  # 5 minutes in milliseconds

# Database Connection Pool
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT_MS=30000
QUERY_TIMEOUT_MS=30000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
